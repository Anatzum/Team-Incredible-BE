<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css"
        integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">

    <%- include('../template/head') %>
</head>

<body>
    <header>
        <%- include('../template/header') %>
    </header>
    <div class="signup-form-container">
        <div class="signup-container">

            <h1 class="signup-title">
                SignUP To MicroAPI
            </h1>
            <div class="google-signup-btn">
                <img class="signup-icon"
                    src="https://res.cloudinary.com/oluwatobiloba/image/upload/v1591804664/incredible%20project/giigke_t85qnf.png" />
                <button class="g-btn">Signup with Google</button>
            </div>
            <div class="or">
                <hr />
                <span>OR</span>
                <hr />
            </div>
            <div class="form">
                <form class="signup-form" id='signup-form' action="" method="POST">
                    <label for="email">Email</label>
                    <input class="signup-input" type="email" id="email" name="email" autocomplete='email' />
                    <label for="password">Password</label>
                    <input class="signup-input" type="password" id="password" name="password" autocomplete='password'/>
                    <label for="confirm-password">Password</label>
                    <input class="signup-input" type="password" id="confirm-password" name="confirmPassword"  autocomplete='password'/>
                    <button class="signup-btn" id='signupButton' type="submit">Sign Up</button>
                    <p class="form-link">Already have an account? <a class="form-link" href="/login">Login</a></p>
                </form>
            </div>
        </div>

        <div class="signup-img">

        </div>
    </div>

    <script>
        const signupForm = document.getElementById('signup-form');
        let signupButton = document.getElementById('signupButton');

        signupForm.addEventListener('submit', function (e) {
          e.preventDefault();
          signupButton.disabled = true;
        });

    </script>

    <footer>
        <%- include('../template/footer') %>
    </footer>
</body>
