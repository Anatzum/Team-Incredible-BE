<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Login page</title>
</head>
<body>

<!--COLOR CODES:-->
<!--red: #FF2929-->
<!--blue: #2972FF-->
<!--green: #31AA52-->

<div class="container-fluid">
    <div class="row">


        <!--        form half-->

<!--        title text-->
        <div class="col-md-6">
            <div class="row">
                <div id="head-text">
                    <div id="dash" class="bg-danger">
                    </div>
                    <div>
                        Login to MicroAPI
                    </div>
                </div>
            </div>

<!--            google button-->
            <div class="row text-center" id="googlediv">
                <button id="googlebtn">
                    <div id="googlebtn-text">
                        <span id="google-img"><img src="/img/google-icon.png" alt=""></span>
                        Login with Google
                    </div>
                </button>
            </div>

<!--            or text-->
            <div class="row" id="or-row">
                <div class="grey-dash">

                </div>
                <div id="or-text">
                    or
                </div>
                <div class="grey-dash">

                </div>
            </div>

<!--            form-->
            <div class="container">
                <form action="" id="login-form">
                        <div id="input-div-top">
                            <label for="email-box">Email</label><br>
                            <input type="email" name="email" id="email-box" class="input-boxes"><br>
                        </div>
                            <div id="input-div-bottom">
                                <label for="password-box">Password</label><br>
                                <input type="password" name="password" class="input-boxes" id="password-box"><br>
                            </div>
                        <div class="row">
                            <div id="forgot">Forgot Password?</div>
                        </div>
                </form>
            </div>

        </div>

        <!--        image half-->
        <div class="col-md-6 bg-danger"  style="padding: 0;">
            <div class=" id="image-div" pa-0 ma-0">
            
<!--                <img id="half-image" class="pa-0 ma-0" src="/img/flower.png" alt="">-->
            </div>
        </div>
    </div>
</div>

<!--js files-->
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
</body>
</html>